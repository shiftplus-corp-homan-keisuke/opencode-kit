{
  "$schema": "https://opencode.ai/config.json",
  "tui": {
    "scroll_speed": 5
  },
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp"],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "-y", "@playwright/mcp"],
      "enabled": true
    },
    "serena": {
      "type": "local",
      "command": ["npx", "-y", "serena-slim"],
      "enabled": true
    }
  }
}
